{
  "compilerOptions": {
    "lib": ["ES2022"],
    "module": "node16",
    "target": "ES2022",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "@server/*": ["./src/server/*"],
      "@server": ["./src/server"],

      "@application/*": ["./src/application/*"],
      "@application": ["./src/application"],

      "@factories/*": ["./src/factories/*"],
      "@factories": ["./src/factories"],

      "@infra/*": ["./src/infra/*"],
      "@infra": ["./src/infra"],

      "@shared/*": ["./src/shared/*"],
      "@shared": ["./src/shared"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
